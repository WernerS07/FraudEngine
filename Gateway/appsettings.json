{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Authentication": "Debug",
      "Microsoft.AspNetCore.Authorization": "Debug"
    }
  },

    "Keycloak": {
    "Authority": "http://keycloak:8080//realms/fraud-engine",
    "ClientId": "fraud-engine",
    "Audience": "fraud-engine",
    "MetadataAddress": "http://keycloak:8080/realms/keycloak-demo/.well-known/openid-configuration"
  
  },
    "ReverseProxy": {
      "Routes": {
        "fraud_route": {
          "ClusterId": "fraud_cluster",
          "AuthorizationPolicy": "BasicPriv", 
          "Match": {
            "Path": "fraud/{**catch-all}"
          },
        "Transforms": [
          { "PathRemovePrefix": "/fraud" }
        ]
        },
        "data_producer_route": {
          "ClusterId": "data_producer_cluster",
          "AuthorizationPolicy": "HigherPriv",
          "Match": {
            "Path": "mockdata/{**catch-all}"
          },
        "Transforms": [
          { "PathRemovePrefix": "/mockdata" }
        ]
        }

      },
      "Clusters": {
      "fraud_cluster": {
        "Destinations": {
          "fraud": { "Address": "http://fraud-engine:8080/" }
        }
      }
      ,
      "data_producer_cluster": {
        "Destinations": {
          "mock1": { "Address": "http://mock-data-producer:8080/" }
        }
      }
    }
    },
  "AllowedHosts": "*"
}
